---
const skillCategories = [
  {
    title: "Programming & Systems",
    icon: "las la-terminal",
    description:
      "Experienced in <strong>Linux Systems Administration</strong> and scripting with <strong>Python</strong>. Proficient in statistical analysis and data processing using <strong>RStudio</strong>.",
  },
  {
    title: "Data & Cloud",
    icon: "las la-cloud",
    description:
      "Skilled in database management with <strong>Oracle SQL Developer</strong>. Experience with cloud computing services including <strong>Microsoft Azure</strong> and <strong>Azure Functions</strong>.",
  },
  {
    title: "Bioinformatics Tools",
    icon: "las la-dna",
    description:
      "Specialized in molecular visualization using <strong>PyMOL</strong>. Capable of applying computational methods to solve biological problems and analyze complex datasets.",
  },
  {
    title: "Soft Skills & Languages",
    icon: "las la-users",
    description:
      "Fluent in <strong>English</strong> with strong <strong>Customer Service</strong> experience. Effective in team collaboration, communication, and adapting to new challenges.",
  },
];
---

<section id="skills" class="skills">
  <div class="container">
    <h2 class="section-title reveal">Technical Skills</h2>

    <div class="skills-grid">
      {
        skillCategories.map((category, index) => (
          <div class={`reveal stagger-${(index % 4) + 1}`}>
            <div class="skill-card">
              <div class="icon-wrapper">
                <i class={category.icon}></i>
              </div>
              <h3>{category.title}</h3>
              <p class="skill-description" set:html={category.description} />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .skills {
    background: var(--color-bg);
    position: relative;
    scroll-margin-top: 10px;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .skill-card {
    background: #ffffff;
    padding: 0.5rem 2rem;
    border-radius: 20px;
    border: 1px solid rgba(141, 110, 99, 0.1);
    box-shadow: 0 10px 30px rgba(62, 39, 35, 0.03);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    /* Transition and other styles are now in global.css */
  }

  .icon-wrapper {
    font-size: 4rem;
    margin-bottom: -1rem;
    color: var(--color-primary);
  }

  .skill-card h3 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
    position: relative;
    z-index: 2;
    margin-bottom: 10px;
  }

  .skill-description {
    font-size: 1rem;
    color: var(--color-text);
    line-height: 1.6;
    position: relative;
    z-index: 2;
    margin-bottom: 0rem;
  }

  /* Highlighted text style */
  .skill-description :global(strong) {
    color: var(--color-primary);
    font-weight: 700;
  }

  .skill-card:hover {
    transform: scale(1.1);
  }

  .skill-card:hover .skill-description,
  .skill-card:hover .skill-description :global(strong),
  .skill-card:hover .icon-wrapper {
    color: #fff;
  }
</style>
